<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/InternetConnectivityStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:text="InternetConnectivityStatus"
        android:textColor="#F3EEEE"
        android:textSize="13sp"
        android:background="@drawable/custom_btn_bg"
        android:textStyle="bold" />


    <Button
        android:id="@+id/BatteryCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/InternetConnectivityStatus"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:text="Battery Charge"
        android:textColor="#F1EDED"
        android:textSize="13dp"
        android:background="@drawable/custom_btn_bg"
        android:textStyle="bold" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Location"
        android:text="Location"
        android:textColor="#ECE8E8"
        android:textSize="13dp"
        android:layout_marginStart="22dp"
        android:layout_below="@id/BatteryCharge"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/Timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Location"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:text="Timestamp"
        android:textColor="#FBF8F8"
        android:textSize="13sp"
        android:background="@drawable/custom_btn_bg"
        android:textStyle="bold" />


    <Button
        android:onClick="uploadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Timestamp"
        android:layout_marginStart="110sp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="23sp"
        android:text="Manual Data Refresh"
        android:textStyle="bold"
        android:textColor="#E4E0E0"
        android:id="@+id/btn"
        android:textSize="12dp"
        android:background="@drawable/custom_btn_bg"/>

</RelativeLayout>
